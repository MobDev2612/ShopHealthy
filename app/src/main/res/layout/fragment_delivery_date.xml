<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shopfitt.android.Fragment.DeliveryDateFragment">

    <LinearLayout
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.shopfitt.android.Utils.FontView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Done! Your Order has been placed successfully!"
        android:textSize="@dimen/text_size_medium" />

    <com.shopfitt.android.Utils.FontView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Your Order will delivered in next couple of hours"
        android:textSize="@dimen/text_size_small" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="500"
            android:progress="0"
            android:progressDrawable="@drawable/circular"
            android:secondaryProgress="500" />

        <com.shopfitt.android.Utils.FontView
            android:id="@+id/tvTimeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="8:88:88"
            android:textColor="@color/colorPrimary"
            android:textSize="80sp" />

    </RelativeLayout>

    <com.shopfitt.android.Utils.FontView
        android:id="@+id/crunch_match_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="You are now eligible for Crunch Match"
        android:textSize="@dimen/text_size_medium" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/delivery_date_submit"
            style="@style/BlueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:padding="5dp"
            android:background="@drawable/green_button"
            android:text="Yes, I am in" />

        <Button
            android:id="@+id/delivery_date_no"
            style="@style/BlueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:minHeight="0dp"
            android:padding="5dp"
            android:text="No, Continue Shopping" />

    </LinearLayout>
    </LinearLayout>

</ScrollView>
