<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_item_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:background="@android:color/white"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:orientation="vertical"
            android:padding="5dp">

            <com.shopfitt.android.Utils.FontView
                android:id="@+id/list_item_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="Name" />

            <com.shopfitt.android.Utils.FontView
                android:id="@+id/list_item_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Price" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_item_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:paddingRight="5dp">

            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:src="@drawable/ic_minus_sign"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:id="@+id/product_list_minus_qty"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

                <com.shopfitt.android.Utils.FontView
                    android:id="@+id/list_item_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="1" />

                <ImageButton
                    android:id="@+id/product_list_add_qty"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_plus_sign"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"/>


            </LinearLayout>

            <Button
                android:id="@+id/list_item_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                style="@style/OrangeButton"
                android:minHeight="0dp"
                android:padding="2dp"
                android:textSize="@dimen/text_size_small"
                android:text="Delete" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_item_desc_visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="3dp">

            <com.shopfitt.android.Utils.FontView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/table_cell"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="2dp"
                android:singleLine="true"
                android:text="Sugar" />

            <com.shopfitt.android.Utils.FontView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="2dp"
                android:layout_weight="1"
                android:background="@drawable/table_cell"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="Calories" />

            <com.shopfitt.android.Utils.FontView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/table_cell"
                android:layout_weight="1"
                android:ellipsize="end"
                android:padding="2dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="Sodium" />

            <com.shopfitt.android.Utils.FontView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="2dp"
                android:layout_weight="1"
                android:background="@drawable/table_cell"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="Fat" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="3dp">

            <com.shopfitt.android.Utils.FontView
                android:id="@+id/list_item_text3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="2dp"
                android:background="@drawable/table_cell"
                android:singleLine="true"
                android:text="desc" />

            <com.shopfitt.android.Utils.FontView
                android:id="@+id/list_item_text4"
                android:layout_width="0dp"
                android:background="@drawable/table_cell"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="desc" />

            <com.shopfitt.android.Utils.FontView
                android:id="@+id/list_item_text5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:background="@drawable/table_cell"
                android:gravity="center"
                android:padding="2dp"
                android:singleLine="true"
                android:text="desc" />

            <com.shopfitt.android.Utils.FontView
                android:id="@+id/list_item_text6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:background="@drawable/table_cell"
                android:text="desc" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>