<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:padding="5dp">

        <com.shopfitt.android.Utils.FontView
            android:id="@+id/order_history_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <com.shopfitt.android.Utils.FontView
            android:id="@+id/order_history_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_medium" />

        <com.shopfitt.android.Utils.FontView
            android:id="@+id/order_history_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="3dp">

        <Button
            android:id="@+id/order_history_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_button"
            android:drawableLeft="@drawable/ic_view"
            android:drawableStart="@drawable/ic_view"
            android:gravity="center"
            android:minHeight="0dp"
            android:padding="2dp"
            android:text="View"
            android:layout_gravity="center_vertical"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_small" />

        <Button
            android:id="@+id/order_history_reorder"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/blue_button"
            android:drawableLeft="@drawable/ic_reorder"
            android:drawableStart="@drawable/ic_reorder"
            android:gravity="center"
            android:minHeight="0dp"
            android:padding="2dp"
            android:text="Re-order"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

</LinearLayout>