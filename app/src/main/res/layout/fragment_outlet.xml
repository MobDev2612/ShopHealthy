<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.shopfitt.android.Fragment.OutletFragment">

    <com.shopfitt.android.Utils.FontView
        android:gravity="center"
        style="@style/BlackText"
        android:text="@string/list_of_stores_available"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/outlet_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/darker_gray"
        android:background="@drawable/list_gradient"
        android:dividerHeight="1dp" />

</LinearLayout>
